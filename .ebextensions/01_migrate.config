container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  02_create_superuser:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py create_superuser_if_none"
    leader_only: true
  03_fix_db_permissions:
    command: "chmod 664 /var/app/current/db.sqlite3 && chown webapp:webapp /var/app/current/db.sqlite3"
    leader_only: true